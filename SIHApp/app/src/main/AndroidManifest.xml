<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abhisheikh.sihapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/school"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".pop.AnnouncementPop" />
        <activity android:name=".pop.MeetingsPop" />
        <activity android:name=".pop.FundPop" />
        <activity android:name=".pop.TaskPop" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".addActivities.AddMeeting" />
        <activity android:name=".addActivities.AddFunds" />
        <activity android:name=".addActivities.AddTasks" />
        <activity
            android:name=".MemberLoginActivity"
            android:label="@string/title_activity_member_login"></activity>
    </application>

</manifest>